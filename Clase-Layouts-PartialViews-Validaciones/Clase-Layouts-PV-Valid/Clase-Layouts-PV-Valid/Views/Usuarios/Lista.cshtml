@model List<Usuario>
@{
    Layout = "_AdminLayout";
    int maxPuntos = Model.Max(o => o.Puntos);
    var usuarioMasPuntos = Model.First(o => o.Puntos == maxPuntos);
}
@section TopContent
{
    <h2>Admin Usuarios</h2>
}
<div>
    Usuario con más puntos:
    <partial name="_pvLinkUsuario" model="@usuarioMasPuntos" />
</div>
<div>
    <table>
        <tr>
            <th>Usuario</th>
            <th>Email</th>
        </tr>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>
                    <partial name="_pvLinkUsuario" model="@usuario" />

                </td>
            </tr>
        }
    </table>
</div>

@section Footer
{
    <span>Hecho en casa el día 02/05/2022</span>
}